{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/app/components/*"
      ],
      "@pages/*": [
        "src/app/pages/*"
      ],
      "@redux/*": [
        "src/app/redux/*"
      ],
      "@clients/*": [
        "src/app/clients/*"
      ],
      "@common/*": [
        "src/app/common/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "index.d.ts"
  ]
}
